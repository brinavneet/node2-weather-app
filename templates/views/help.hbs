<!-- Help page for web-server -->

<!DOCTYPE html>
<html>
<head>
    <title>Help</title>
    <link rel="icon" href="/imgs/cloud-icon.png">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        p{
            font-size: 18px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="main-content">
        {{>header}}
        <p>{{type}}</p>
        <p>You can submit your comments here..</p>
        <textarea id="textArea" name="question" rows="5" cols="30" placeholder="Text Here"></textarea><br>
        <button onclick="textAreaFunc()">Submit Response</button>
        
    </div>
    
    
    {{>footer}}

    <script>
        function textAreaFunc() {
           if(confirm('Your response submitted')){
                window.location.reload();  
            }
        }
    </script>
</body>
</html>